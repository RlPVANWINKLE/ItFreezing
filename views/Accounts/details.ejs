<div class=" applications form" style="margin-left: 2%; width: 15%;">
    <h1 class=""><u>Applications</u></h1>
    <% Apps.forEach(app => {%>
      <h2><%= app %></h2>
    <%}) %>
    <a href="/account/<%= acc %>/details/addApps" class="button">ADD APPLICATIONS</a>
    
</div>
<div style="text-align: center; float:left; overflow-y: scroll; width: 25%; margin-left: 2%; scrollbar-width: thin;" class="form applications">
    <h1 class=""><u>Tasks</u></h1>
    <% for(let i = 0; i < tasks.length; i++){%>
      <% if(tasks[i].Status == "Active"){%>
        <span onclick="window.location='/account/<%= acc %>/<%= tasks[i].id %>'" class="task" title="CLICK TO COMPLETE" ><h2 style="max-width: 75%; margin: auto;"><%= tasks[i].Title %>:</h2><h3 style="border-bottom: 3px solid black; padding-bottom: 5%;"><%= tasks[i].Description %></h3></span><br><br>
      <%} else{%>
        <span style="text-decoration: line-through;" ondblclick="window.location='/account/<%= acc %>/<%= tasks[i].id %>/delete'"><h2  title=" DBL CLICK TO DELETE" class="task" style="max-width: 75%; margin: auto;"><%= tasks[i].Title %>:</h2><h3 style="border-bottom: 3px solid black; padding-bottom: 5%;"><%= tasks[i].Description %></h3></span><br><br>
      <%}%>
      
    <%} %>

    <a href="/account/<%= acc %>/tasks" style="position: sticky; bottom: -20px"class="button2">ADD Tasks</a>
    
</div>

